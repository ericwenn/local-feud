<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/post_item"
    android:orientation="vertical"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="@dimen/card_corner_radius">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/default_margin"
            android:text="(Manssymbol) Rune, 98"
            android:id="@+id/post_item_sender_textview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/default_margin"
            android:text="mindre 채n 500 m"
            android:id="@+id/post_item_distance_textview"
            />
        <View
            android:id="@+id/post_item_top_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/card_post_top_space"
            android:alpha="0.12"
            android:background="@color/black" />

        <TextView
            android:layout_below="@id/post_item_top_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_item_msg_textview"
            android:padding="@dimen/default_margin"
            android:textSize="@dimen/card_post_message_text_size"
            android:text="K채nner mig sjukt gammal idag... N책n annan som k채nner detsamma?"/>

        <TextView
            android:layout_below="@id/post_item_msg_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingBottom="@dimen/default_margin"
            android:paddingStart="@dimen/default_margin"
            android:paddingEnd="@dimen/default_margin"
            android:id="@+id/post_item_time_elapsed_textview"
            android:text="8 minuter sedan"/>

        <TextView
            android:layout_below="@id/post_item_msg_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="@dimen/default_margin"
            android:paddingStart="@dimen/default_margin"
            android:paddingEnd="@dimen/default_margin"
            android:id="@+id/post_item_time_textview"
            android:text="20:56"/>

        <!--Temporary TextView. Should be "settings" icon-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_item_msg_textview"
            android:layout_alignParentEnd="true"
            android:paddingBottom="@dimen/default_margin"
            android:paddingStart="@dimen/default_margin"
            android:paddingEnd="@dimen/default_margin"
            android:text="More"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>