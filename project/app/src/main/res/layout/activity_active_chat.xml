<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/chat_top_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilepic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/com_facebook_profile_picture_blank_square" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chat_title"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/profilepic"
                android:text="HjÃ¶rdis, 98"
                android:textSize="@dimen/card_post_message_text_size" />

        </RelativeLayout>

        <View
            android:id="@+id/chat_top_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/chat_top_bar"
            android:alpha="0.12"
            android:background="@color/black" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_message_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="?attr/actionBarSize">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/write_chat_message_layout"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:background="@color/feedColorPrimary"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/posttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="bottom|left"
            android:hint="@string/chat_hint"
            android:inputType="textCapSentences"
            android:maxLength="240"
            android:padding="10dp"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/post_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:background="@color/transparent"
            android:src="@drawable/ic_send_white_24dp" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
