<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chalmers.tda367.localfeud.control.SettingsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/temp_me_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Push the button at your own risk!"
            android:textSize="@dimen/card_post_message_text_size" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/me_logout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/temp_me_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_margin" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
