<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_list_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    app:cardCornerRadius="@dimen/card_corner_radius">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_margin">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/chat_list_image_size"
            android:layout_height="@dimen/chat_list_image_size"
            android:id="@+id/chat_list_item_image"
            android:layout_marginEnd="@dimen/default_margin"
            android:src="@drawable/com_facebook_profile_picture_blank_square" />
        <TextView
            android:id="@+id/chat_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:alpha="0.7"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/chat_list_item_image" />
        <TextView
            android:id="@+id/chat_list_item_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:maxLines="1"
            android:layout_marginTop="@dimen/small_margin"
            android:textColor="@color/defaultTextColor"
            android:layout_below="@id/chat_list_item_title"
            android:layout_toEndOf="@+id/chat_list_item_image"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>